<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/yellow" /> <!-- Màu viền vàng -->
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Trạng thái khi không được chọn -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#9d9a9c" /> <!-- Màu viền mặc định -->
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>