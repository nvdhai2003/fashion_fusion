<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerificationCodeActivity"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your email"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:fontFamily="@font/sfprodisplaybold"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the code we sent in the email"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:fontFamily="@font/sfprodisplayregular"/>
        <TextView
            android:id="@+id/tv_verify_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nvdhai2003@gmail.com"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:fontFamily="@font/sfprodisplaysemibold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="120dp">
        <EditText
            android:id="@+id/editText1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/sfprodisplaymedium"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/edit_text_border" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/sfprodisplaymedium"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/edit_text_border"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:fontFamily="@font/sfprodisplaymedium"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/edit_text_border"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sfprodisplaymedium"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/edit_text_border"/>
        <EditText
            android:id="@+id/editText5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:fontFamily="@font/sfprodisplaymedium"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/edit_text_border"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/sfprodisplaymedium"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/edit_text_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="90dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Update my email"
            android:fontFamily="@font/sfprodisplaysemibold"
            android:textSize="18sp"
            android:textColor="@color/yellow"
            android:layout_gravity="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:background="@drawable/background_button"
            android:text="Resend code"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>